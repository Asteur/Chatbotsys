{
  "dataset_reader": {
    "name": "conll2003_reader",
    "data_path": "ontonotes/"
  },
  "dataset_iterator": {
    "name": "data_learning_iterator"
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "id": "word_vocab",
        "name": "default_vocab",
        "fit_on": ["x"],
		"level": "token",
        "save_path": "ner_ontonotes/word.dict",
        "load_path": "ner_ontonotes/word.dict"
      },
      {
        "id": "tag_vocab",
        "name": "default_vocab",
        "fit_on": ["y"],
		"level": "token",
        "save_path": "ner_ontonotes/tag.dict",
        "load_path": "ner_ontonotes/tag.dict"
      },
      {
        "id": "char_vocab",
        "name": "default_vocab",
        "fit_on": ["x"],
		"level": "char",
        "save_path": "ner_ontonotes/char.dict",
        "load_path": "ner_ontonotes/char.dict"
      },
      {
        "id": "glove_emb",
        "name": "glove",
        "load_path": "embeddings/glove.6B.100d.txt",
        "save_path": "embeddings/glove.6B.100d.txt"
      },
      {
        "in": ["x"],
        "in_y": ["y"],
        "out": ["y_predicted"],
        "name": "ner",
        "main": true,
        "net_type": "rnn",
        "cell_type": "lstm",
        "embeddings_onethego": true,
        "save_path": "ner_ontonotes/ner_model_emb",
        "load_path": "ner_ontonotes/ner_model_emb",
        "word_vocab": "#word_vocab",
        "tag_vocab": "#tag_vocab",
        "char_vocab": "#char_vocab",
        "embedder": "#glove_emb",
        "verbouse": true,
        "filter_width": 7,
        "embeddings_dropout": true,
        "n_filters": [
          192,
          192
        ],
        "token_embeddings_dim": 100,
        "use_char_embeddins": true,
        "char_embeddings_dim": 70,
        "use_batch_norm": true,
        "use_crf": true,
        "learning_rate": 5e-3,
        "dropout_rate": 0.5,
        "learning_rate_decay": 0.88,
	    "use_capitalization": true,
        "two_dense_layers": true
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "epochs": 100,
    "batch_size": 64,

    "metrics": ["ner_f1"],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "pytest_max_batches": 1,

    "log_every_n_epochs": 1,
    "show_examples": false
  },
  "metadata": {
    "labels": {
      "telegram_utils": "NEROntoNotesSenna"
    },
    "download": [
      "http://lnsigo.mipt.ru/export/deeppavlov_data/ner_ontonotes.tar.gz",
      {
        "url": "http://lnsigo.mipt.ru/export/embeddings/glove.6B.100d.txt",
        "subdir": "embeddings"
      }
    ]
  }
}

